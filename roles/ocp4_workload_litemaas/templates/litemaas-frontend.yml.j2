---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: litemaas-frontend
  labels:
    app: litemaas-frontend
    component: web
spec:
  replicas: 1
  selector:
    matchLabels:
      app: litemaas-frontend
  template:
    metadata:
      labels:
        app: litemaas-frontend
        component: web
    spec:
      initContainers:
        - name: wait-for-backend
          image: busybox:1.36
          command:
            - sh
            - -c
            - |
              echo "Waiting for backend to be ready..."
              until nc -z litemaas-backend 8080; do
                echo "Backend is not ready yet. Waiting..."
                sleep 5
              done
              echo "Backend is ready! Starting frontend..."
{% if ocp4_workload_litemaas_branding_enabled | default(false) | bool %}
        # Copy branding assets to a separate directory
        - name: setup-branding
          image: busybox:1.36
          command:
            - sh
            - -c
            - |
              echo "Setting up RHDP branding..."
              mkdir -p /branding-ready
              cp /branding-source/* /branding-ready/
              echo "RHDP branding files copied"
          volumeMounts:
            - name: branding-source
              mountPath: /branding-source
              readOnly: true
            - name: branding-files
              mountPath: /branding-ready
{% endif %}
      containers:
        - name: frontend
          image: "{{ ocp4_workload_litemaas_frontend_image }}:{{ ocp4_workload_litemaas_version }}"
          ports:
            - containerPort: 8080
              name: http
          env:
            - name: BACKEND_URL
              value: "http://litemaas-backend:8080"
          resources:
            requests:
              memory: "128Mi"
              cpu: "100m"
            limits:
              memory: "{{ ocp4_workload_litemaas_frontend_memory_limit }}"
              cpu: "{{ ocp4_workload_litemaas_frontend_cpu_limit }}"
          readinessProbe:
            httpGet:
              path: /
              port: 8080
            initialDelaySeconds: 10
            periodSeconds: 10
            timeoutSeconds: 5
            failureThreshold: 3
          livenessProbe:
            httpGet:
              path: /
              port: 8080
            initialDelaySeconds: 30
            periodSeconds: 15
            timeoutSeconds: 5
            failureThreshold: 3
{% if ocp4_workload_litemaas_branding_enabled | default(false) | bool %}
        # Nginx sidecar to inject branding
        - name: branding-proxy
          image: nginx:1.25-alpine
          ports:
            - containerPort: 8081
              name: proxy
          volumeMounts:
            - name: branding-files
              mountPath: /usr/share/nginx/html/branding
              readOnly: true
            - name: nginx-branding-config
              mountPath: /etc/nginx/conf.d/default.conf
              subPath: default.conf
          resources:
            requests:
              memory: "64Mi"
              cpu: "50m"
            limits:
              memory: "128Mi"
              cpu: "100m"
      volumes:
        - name: branding-source
          configMap:
            name: litemaas-branding
        - name: branding-files
          emptyDir: {}
        - name: nginx-branding-config
          configMap:
            name: litemaas-branding-nginx-config
{% endif %}
---
apiVersion: v1
kind: Service
metadata:
  name: litemaas-frontend
  labels:
    app: litemaas-frontend
    component: web
spec:
  ports:
    - port: 8080
{% if ocp4_workload_litemaas_branding_enabled | default(false) | bool %}
      targetPort: 8081  # Point to nginx branding proxy
{% else %}
      targetPort: 8080  # Point directly to frontend
{% endif %}
      name: http
  selector:
    app: litemaas-frontend
---
apiVersion: route.openshift.io/v1
kind: Route
metadata:
  name: litemaas-frontend
  labels:
    app: litemaas-frontend
    component: web
spec:
  host: "litellm-frontend.{{ ocp4_workload_litemaas_cluster_domain }}"
  to:
    kind: Service
    name: litemaas-frontend
  port:
    targetPort: http
  tls:
    termination: edge
    insecureEdgeTerminationPolicy: Redirect
