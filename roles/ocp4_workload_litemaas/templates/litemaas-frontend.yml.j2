---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: litellm-frontend
  labels:
    app: litellm-frontend
    component: web
spec:
  replicas: 1
  selector:
    matchLabels:
      app: litellm-frontend
  template:
    metadata:
      labels:
        app: litellm-frontend
        component: web
    spec:
      initContainers:
{% if ocp4_workload_litemaas_enable_custom_logo | bool %}
        - name: copy-custom-logos
          image: "{{ ocp4_workload_litemaas_frontend_image }}:{{ ocp4_workload_litemaas_version }}"
          command:
            - sh
            - -c
            - |
              echo "Setting up assets with custom logos..."

              # First, copy ALL assets from the image to the shared volume
              echo "Copying all frontend assets to shared volume..."
              cp -r /opt/app-root/src/assets/* /shared-assets/

              # Now replace the logo files with custom ones
              echo "Replacing logos with custom versions..."
              LOGO_LIGHT=$(ls /shared-assets/logo-title-*.svg 2>/dev/null | head -1)
              LOGO_DARK=$(ls /shared-assets/logo-title-white-*.svg 2>/dev/null | head -1)
              FAVICON=$(ls /shared-assets/litemaas_favicon-*.svg 2>/dev/null | head -1)

              if [ -n "$LOGO_LIGHT" ]; then
                echo "Found light logo: $LOGO_LIGHT"
                cp /tmp/logos/logo-light.svg "$LOGO_LIGHT"
                echo "✓ Replaced light logo"
              fi

              if [ -n "$LOGO_DARK" ]; then
                echo "Found dark logo: $LOGO_DARK"
                cp /tmp/logos/logo-dark.svg "$LOGO_DARK"
                echo "✓ Replaced dark logo"
              fi

              if [ -n "$FAVICON" ]; then
                echo "Found favicon: $FAVICON"
                cp /tmp/logos/favicon.svg "$FAVICON"
                echo "✓ Replaced favicon"
              fi

              echo "✓ Assets setup complete!"

              # Replace welcome message and add disclaimer
              echo "Customizing welcome message and adding disclaimer..."
              for jsfile in /shared-assets/*.js; do
                if grep -q "Welcome to LiteMaaS" "$jsfile" 2>/dev/null; then
                  sed -i 's/Welcome to LiteMaaS/Welcome to Red Hat Demo Platform MaaS service/g' "$jsfile"
                  echo "✓ Updated welcome message in $(basename $jsfile)"
                fi
                # Replace subtitle with disclaimer
                if grep -q "Your Model as a Service platform" "$jsfile" 2>/dev/null; then
                  sed -i 's/Your Model as a Service platform for accessing and managing AI models\./This service is intended for demos, workshops, and training purposes only. Do not share credentials or use for customer-facing production workloads./g' "$jsfile"
                  echo "✓ Replaced subtitle with disclaimer in $(basename $jsfile)"
                fi
                # Update login page title
                if grep -q "Sign in to LiteMaaS" "$jsfile" 2>/dev/null; then
                  sed -i 's/Sign in to LiteMaaS/Sign in to Red Hat Demo Platform MaaS/g' "$jsfile"
                  echo "✓ Updated login page title in $(basename $jsfile)"
                fi
                # Handle "Log in to LiteMaaS" variant
                if grep -q "Log in to LiteMaaS" "$jsfile" 2>/dev/null; then
                  sed -i 's/Log in to LiteMaaS/Log in to Red Hat Demo Platform MaaS/g' "$jsfile"
                  echo "✓ Updated login page title (Log in variant) in $(basename $jsfile)"
                fi
              done
          volumeMounts:
            - name: custom-logo
              mountPath: /tmp/logos
            - name: assets-volume
              mountPath: /shared-assets
{% endif %}
        - name: wait-for-backend
          image: busybox:1.36
          command:
            - sh
            - -c
            - |
              echo "Waiting for backend to be ready..."
              until nc -z litellm-backend 8080; do
                echo "Backend is not ready yet. Waiting..."
                sleep 5
              done
              echo "Backend is ready! Starting frontend..."
      containers:
        - name: frontend
          image: "{{ ocp4_workload_litemaas_frontend_image }}:{{ ocp4_workload_litemaas_version }}"
          ports:
            - containerPort: 8080
              name: http
          env:
            - name: BACKEND_URL
              value: "http://litellm-backend:8080"
{% if ocp4_workload_litemaas_enable_custom_logo | bool %}
          volumeMounts:
            - name: assets-volume
              mountPath: /opt/app-root/src/assets
              readOnly: true
{% endif %}
          resources:
            requests:
              memory: "128Mi"
              cpu: "100m"
            limits:
              memory: "{{ ocp4_workload_litemaas_frontend_memory_limit }}"
              cpu: "{{ ocp4_workload_litemaas_frontend_cpu_limit }}"
          readinessProbe:
            httpGet:
              path: /
              port: 8080
            initialDelaySeconds: 10
            periodSeconds: 10
            timeoutSeconds: 5
            failureThreshold: 3
          livenessProbe:
            httpGet:
              path: /
              port: 8080
            initialDelaySeconds: 30
            periodSeconds: 15
            timeoutSeconds: 5
            failureThreshold: 3
{% if ocp4_workload_litemaas_enable_custom_logo | bool %}
      volumes:
        - name: custom-logo
          configMap:
            name: litellm-custom-logo
        - name: assets-volume
          emptyDir: {}
{% endif %}
---
apiVersion: v1
kind: Service
metadata:
  name: litellm-frontend
  labels:
    app: litellm-frontend
    component: web
spec:
  ports:
    - port: 8080
      targetPort: 8080
      name: http
  selector:
    app: litellm-frontend
---
apiVersion: route.openshift.io/v1
kind: Route
metadata:
  name: "{{ ocp4_workload_litemaas_frontend_route_name }}"
  labels:
    app: litellm-frontend
    component: web
spec:
  host: "{{ ocp4_workload_litemaas_frontend_route_prefix }}.{{ ocp4_workload_litemaas_cluster_domain }}"
  to:
    kind: Service
    name: litellm-frontend
  port:
    targetPort: http
  tls:
    termination: edge
    insecureEdgeTerminationPolicy: Redirect
