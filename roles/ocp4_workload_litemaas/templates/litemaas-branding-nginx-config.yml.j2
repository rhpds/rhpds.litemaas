---
apiVersion: v1
kind: ConfigMap
metadata:
  name: litemaas-branding-nginx-config
  namespace: {{ _litemaas_ha_namespace | default(ocp4_workload_litemaas_namespace) }}
  labels:
    app: litemaas
    component: branding
data:
  default.conf: |
    server {
        listen 8081;
        server_name _;

        # Serve branding assets
        location /branding/ {
            alias /usr/share/nginx/html/branding/;
            expires 1h;
            add_header Cache-Control "public, immutable";
        }

        # Proxy all other requests to the frontend container
        location / {
            proxy_pass http://localhost:8080;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_cache_bypass $http_upgrade;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;

            # Inject branding script into HTML responses
            sub_filter '</head>' '<script src="/branding/branding-inject.js"></script></head>';
            sub_filter_once on;
            sub_filter_types text/html;
        }
    }
