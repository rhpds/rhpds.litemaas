---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: litellm-frontend
  labels:
    app: litellm-frontend
    component: web-ui
spec:
  replicas: 1
  selector:
    matchLabels:
      app: litellm-frontend
  template:
    metadata:
      labels:
        app: litellm-frontend
        component: web-ui
    spec:
{% if ocp4_workload_litemaas_enable_custom_logo | bool %}
      initContainers:
        - name: copy-custom-logos
          image: "{{ ocp4_workload_litemaas_frontend_image }}:{{ ocp4_workload_litemaas_version }}"
          command:
            - sh
            - -c
            - |
              echo "Copying custom logos and favicon to assets directory..."
              # Find the hashed filenames
              LOGO_LIGHT=$(ls /opt/app-root/src/assets/logo-title-*.svg 2>/dev/null | head -1)
              LOGO_DARK=$(ls /opt/app-root/src/assets/logo-title-white-*.svg 2>/dev/null | head -1)
              FAVICON=$(ls /opt/app-root/src/assets/litemaas_favicon-*.svg 2>/dev/null | head -1)

              if [ -n "$LOGO_LIGHT" ]; then
                echo "Found light logo: $LOGO_LIGHT"
                cp /tmp/logos/logo-light.svg "$LOGO_LIGHT"
                echo "✓ Replaced light logo"
              fi

              if [ -n "$LOGO_DARK" ]; then
                echo "Found dark logo: $LOGO_DARK"
                cp /tmp/logos/logo-dark.svg "$LOGO_DARK"
                echo "✓ Replaced dark logo"
              fi

              if [ -n "$FAVICON" ]; then
                echo "Found favicon: $FAVICON"
                cp /tmp/logos/favicon.svg "$FAVICON"
                echo "✓ Replaced favicon"
              fi

              echo "Logo and favicon replacement complete!"
          volumeMounts:
            - name: custom-logo
              mountPath: /tmp/logos
            - name: assets-volume
              mountPath: /opt/app-root/src/assets
{% endif %}
      containers:
        - name: frontend
          image: "{{ ocp4_workload_litemaas_frontend_image }}:{{ ocp4_workload_litemaas_version }}"
          ports:
            - containerPort: 8080
              name: http
          env:
            - name: BACKEND_URL
              value: "http://litellm-backend:8080"
{% if ocp4_workload_litemaas_enable_custom_logo | bool %}
          volumeMounts:
            - name: assets-volume
              mountPath: /opt/app-root/src/assets
{% endif %}
          resources:
            requests:
              memory: "128Mi"
              cpu: "50m"
            limits:
              memory: "{{ ocp4_workload_litemaas_frontend_memory_limit }}"
              cpu: "{{ ocp4_workload_litemaas_frontend_cpu_limit }}"
          readinessProbe:
            httpGet:
              path: /
              port: 8080
            initialDelaySeconds: 5
            periodSeconds: 5
            timeoutSeconds: 3
            failureThreshold: 3
          livenessProbe:
            httpGet:
              path: /
              port: 8080
            initialDelaySeconds: 30
            periodSeconds: 10
            timeoutSeconds: 5
            failureThreshold: 3
{% if ocp4_workload_litemaas_enable_custom_logo | bool %}
      volumes:
        - name: custom-logo
          configMap:
            name: litellm-custom-logo
        - name: assets-volume
          emptyDir: {}
{% endif %}
---
apiVersion: v1
kind: Service
metadata:
  name: litellm-frontend
  labels:
    app: litellm-frontend
    component: web-ui
spec:
  ports:
    - port: 8080
      targetPort: 8080
      name: http
  selector:
    app: litellm-frontend
---
apiVersion: route.openshift.io/v1
kind: Route
metadata:
  name: litellm-frontend
  labels:
    app: litellm-frontend
    component: web-ui
spec:
  host: "{{ ocp4_workload_litemaas_frontend_route_prefix }}-{{ _user_suffix }}.{{ ocp4_workload_litemaas_cluster_domain }}"
  to:
    kind: Service
    name: litellm-frontend
  port:
    targetPort: http
  tls:
    termination: edge
    insecureEdgeTerminationPolicy: Redirect
