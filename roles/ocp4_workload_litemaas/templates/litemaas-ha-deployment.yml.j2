---
apiVersion: v1
kind: Secret
metadata:
  name: litellm-secret
  labels:
    app: litemaas
    component: ai-proxy
type: Opaque
stringData:
  LITELLM_MASTER_KEY: "sk-{{ _litemaas_ha_admin_api_key }}"
  UI_USERNAME: "{{ ocp4_workload_litemaas_litellm_ui_username }}"
  UI_PASSWORD: "{{ _litemaas_ha_admin_password }}"
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: litemaas
  labels:
    app: litemaas
    component: ai-proxy
spec:
  replicas: {{ ocp4_workload_litemaas_ha_litellm_replicas | int }}
  selector:
    matchLabels:
      app: litemaas
  template:
    metadata:
      labels:
        app: litemaas
        component: ai-proxy
    spec:
      initContainers:
        - name: wait-for-postgres
          image: busybox:1.36
          command:
            - sh
            - -c
            - |
              until nc -z litemaas-postgres 5432; do
                echo "Waiting for PostgreSQL..."
                sleep 2
              done
              echo "PostgreSQL is ready"
        - name: wait-for-redis
          image: busybox:1.36
          command:
            - sh
            - -c
            - |
              until nc -z litemaas-redis 6379; do
                echo "Waiting for Redis..."
                sleep 2
              done
              echo "Redis is ready"
{% if ocp4_workload_litemaas_oauth_proxy_enabled | bool %}
      serviceAccountName: "{{ ocp4_workload_litemaas_oauth_proxy_serviceaccount }}"
{% endif %}
      containers:
{% if ocp4_workload_litemaas_oauth_proxy_enabled | bool %}
        - name: oauth-proxy
          image: "{{ ocp4_workload_litemaas_oauth_proxy_image }}"
          ports:
            - containerPort: 8443
              name: https
          args:
            - --https-address=:8443
            - --provider=openshift
            - --openshift-service-account={{ ocp4_workload_litemaas_oauth_proxy_serviceaccount }}
            - --upstream=http://localhost:4000
            - --tls-cert=/etc/tls/private/tls.crt
            - --tls-key=/etc/tls/private/tls.key
            - --cookie-secret-file=/etc/proxy/secrets/session_secret
            - --cookie-refresh=2h
            - --cookie-expire=24h
            - --skip-auth-regex=^/metrics
          volumeMounts:
            - mountPath: /etc/tls/private
              name: proxy-tls
            - mountPath: /etc/proxy/secrets
              name: proxy-cookie
          resources:
            requests:
              memory: "128Mi"
              cpu: "50m"
            limits:
              memory: "256Mi"
              cpu: "200m"
{% endif %}
        - name: litemaas
          image: "{{ ocp4_workload_litemaas_litellm_image }}:{{ ocp4_workload_litemaas_litellm_tag }}"
          ports:
            - containerPort: 4000
              name: http
          env:
            - name: DATABASE_URL
              valueFrom:
                secretKeyRef:
                  name: litemaas-db
                  key: DATABASE_URL
            - name: LITELLM_MASTER_KEY
              valueFrom:
                secretKeyRef:
                  name: litellm-secret
                  key: LITELLM_MASTER_KEY
            - name: UI_USERNAME
              valueFrom:
                secretKeyRef:
                  name: litellm-secret
                  key: UI_USERNAME
            - name: UI_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: litellm-secret
                  key: UI_PASSWORD
            - name: STORE_MODEL_IN_DB
              value: "True"
{% if ocp4_workload_litemaas_litellm_license_key | length > 0 %}
            - name: LITELLM_LICENSE_KEY
              value: "{{ ocp4_workload_litemaas_litellm_license_key }}"
{% endif %}
            - name: REDIS_HOST
              value: "litemaas-redis"
            - name: REDIS_PORT
              value: "6379"
            - name: DB_HOST
              value: "litemaas-postgres"
            - name: DB_PORT
              value: "5432"
            - name: DB_NAME
              valueFrom:
                secretKeyRef:
                  name: litemaas-db
                  key: database
            - name: DB_USER
              valueFrom:
                secretKeyRef:
                  name: litemaas-db
                  key: username
            - name: DB_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: litemaas-db
                  key: password
          readinessProbe:
            httpGet:
              path: /health/readiness
              port: 4000
            initialDelaySeconds: 10
            periodSeconds: 10
            timeoutSeconds: 5
            failureThreshold: 3
          livenessProbe:
            httpGet:
              path: /health/liveness
              port: 4000
            initialDelaySeconds: 30
            periodSeconds: 15
            timeoutSeconds: 5
            failureThreshold: 3
          resources:
            requests:
              memory: "{{ ocp4_workload_litemaas_ha_litellm_memory_request }}"
              cpu: "{{ ocp4_workload_litemaas_ha_litellm_cpu_request }}"
            limits:
              memory: "{{ ocp4_workload_litemaas_ha_litellm_memory_limit }}"
              cpu: "{{ ocp4_workload_litemaas_ha_litellm_cpu_limit }}"
{% if ocp4_workload_litemaas_oauth_proxy_enabled | bool %}
      volumes:
        - name: proxy-tls
          secret:
            secretName: litemaas-tls
            defaultMode: 420
        - name: proxy-cookie
          secret:
            secretName: litemaas-oauth-proxy-secret
            defaultMode: 420
{% endif %}
---
apiVersion: v1
kind: Service
metadata:
  name: litemaas
  labels:
    app: litemaas
    component: ai-proxy
{% if ocp4_workload_litemaas_oauth_proxy_enabled | bool %}
  annotations:
    service.beta.openshift.io/serving-cert-secret-name: litemaas-tls
{% endif %}
spec:
  ports:
{% if ocp4_workload_litemaas_oauth_proxy_enabled | bool %}
    - port: 8443
      targetPort: 8443
      name: https
{% else %}
    - port: 4000
      targetPort: 4000
      name: http
{% endif %}
  selector:
    app: litemaas
---
apiVersion: route.openshift.io/v1
kind: Route
metadata:
  name: litemaas
  labels:
    app: litemaas
    component: ai-proxy
spec:
  host: "{{ ocp4_workload_litemaas_api_route_prefix }}.{{ ocp4_workload_litemaas_cluster_domain }}"
  to:
    kind: Service
    name: litemaas
  port:
{% if ocp4_workload_litemaas_oauth_proxy_enabled | bool %}
    targetPort: https
  tls:
    termination: reencrypt
{% else %}
    targetPort: http
  tls:
    termination: edge
{% endif %}
    insecureEdgeTerminationPolicy: Redirect
