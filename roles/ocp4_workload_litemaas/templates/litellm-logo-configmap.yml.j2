---
apiVersion: v1
kind: ConfigMap
metadata:
  name: litellm-custom-logo
  namespace: {{ _litemaas_ha_namespace | default(ocp4_workload_litemaas_namespace) }}
  labels:
    app: litellm-frontend
    component: branding
data:
  # Logo for light theme (dark logo on light background)
  logo-light.svg: |
{% if ocp4_workload_litemaas_logo_light_path != "" %}
{{ lookup('file', ocp4_workload_litemaas_logo_light_path) | indent(4, first=True) }}
{% else %}
{{ lookup('ansible.builtin.file', 'demo-black.svg') | indent(4, first=True) }}
{% endif %}

  # Logo for dark theme (white logo on dark background)
  logo-dark.svg: |
{% if ocp4_workload_litemaas_logo_dark_path != "" %}
{{ lookup('file', ocp4_workload_litemaas_logo_dark_path) | indent(4, first=True) }}
{% else %}
{{ lookup('ansible.builtin.file', 'demo.svg') | indent(4, first=True) }}
{% endif %}

  # Favicon (Red Hat logo by default)
  favicon.svg: |
{% if ocp4_workload_litemaas_favicon_path != "" %}
{{ lookup('file', ocp4_workload_litemaas_favicon_path) | indent(4, first=True) }}
{% else %}
{{ lookup('ansible.builtin.file', 'redhat-favicon.svg') | indent(4, first=True) }}
{% endif %}
