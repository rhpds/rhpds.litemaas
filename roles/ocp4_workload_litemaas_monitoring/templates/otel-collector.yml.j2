---
# =============================================================================
# OpenTelemetry Collector - Free Alternative to LiteLLM Enterprise Metrics
# =============================================================================
# LiteLLM Prometheus metrics requires Enterprise license
# OpenTelemetry is free and provides the same metrics via OTLP -> Prometheus
# =============================================================================

# ConfigMap for OTel Collector configuration
apiVersion: v1
kind: ConfigMap
metadata:
  name: otel-collector-config
  namespace: {{ ocp4_workload_litemaas_monitoring_namespace }}
  labels:
    app: otel-collector
data:
  otel-collector-config.yaml: |
    extensions:
      health_check:
        endpoint: 0.0.0.0:13133

    receivers:
      otlp:
        protocols:
          http:
            endpoint: 0.0.0.0:4318
          grpc:
            endpoint: 0.0.0.0:4317

    processors:
      batch:
        timeout: 10s

    exporters:
      prometheus:
        endpoint: "0.0.0.0:8889"
        namespace: litellm
        resource_to_telemetry_conversion:
          enabled: true

      logging:
        loglevel: info

    service:
      extensions: [health_check]
      pipelines:
        metrics:
          receivers: [otlp]
          processors: [batch]
          exporters: [prometheus, logging]

---
# Deployment for OpenTelemetry Collector
apiVersion: apps/v1
kind: Deployment
metadata:
  name: otel-collector
  namespace: {{ ocp4_workload_litemaas_monitoring_namespace }}
  labels:
    app: otel-collector
    app.kubernetes.io/name: otel-collector
    app.kubernetes.io/component: metrics-collector
    app.kubernetes.io/part-of: litemaas
spec:
  replicas: 1
  selector:
    matchLabels:
      app: otel-collector
  template:
    metadata:
      labels:
        app: otel-collector
    spec:
      containers:
      - name: otel-collector
        image: otel/opentelemetry-collector-contrib:{{ ocp4_workload_litemaas_monitoring_otel_collector_version }}
        args:
          - "--config=/etc/otel-collector-config.yaml"
        volumeMounts:
        - name: config
          mountPath: /etc/otel-collector-config.yaml
          subPath: otel-collector-config.yaml
        ports:
        - containerPort: 4318
          name: otlp-http
          protocol: TCP
        - containerPort: 4317
          name: otlp-grpc
          protocol: TCP
        - containerPort: 8889
          name: prometheus
          protocol: TCP
        - containerPort: 13133
          name: health-check
          protocol: TCP
        resources:
          requests:
            cpu: {{ ocp4_workload_litemaas_monitoring_otel_collector_cpu_request }}
            memory: {{ ocp4_workload_litemaas_monitoring_otel_collector_memory_request }}
          limits:
            cpu: {{ ocp4_workload_litemaas_monitoring_otel_collector_cpu_limit }}
            memory: {{ ocp4_workload_litemaas_monitoring_otel_collector_memory_limit }}
        livenessProbe:
          httpGet:
            path: /
            port: 13133
          initialDelaySeconds: 10
          periodSeconds: 10
        readinessProbe:
          httpGet:
            path: /
            port: 13133
          initialDelaySeconds: 5
          periodSeconds: 5
      volumes:
      - name: config
        configMap:
          name: otel-collector-config

---
# Service for OpenTelemetry Collector
apiVersion: v1
kind: Service
metadata:
  name: otel-collector
  namespace: {{ ocp4_workload_litemaas_monitoring_namespace }}
  labels:
    app: otel-collector
spec:
  selector:
    app: otel-collector
  ports:
  - name: otlp-http
    port: 4318
    targetPort: 4318
    protocol: TCP
  - name: otlp-grpc
    port: 4317
    targetPort: 4317
    protocol: TCP
  - name: prometheus
    port: 8889
    targetPort: 8889
    protocol: TCP
